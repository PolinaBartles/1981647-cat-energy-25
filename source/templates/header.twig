<header class="main-header">
  <a class="main-header__logo-icon" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
    <img class="main-header__logo-icon-img" src="img/logo-mobile.png" width="34" height="38" alt="Знак Cat Energy." />
    <img class="main-header__logo-title-img" src="img/mobile-logo-text.svg" width="101" height="18" alt="Логотип Cat Energy." />
  </a>
  <nav class="main-nav">
    <button class="main-nav__toggle" type="button">
      <span class="visually-hidden">Открыть меню</span>
    </button>
    <div class="page__centerer">
      <ul class="main-nav__list site-list">
        {% for page in pages %}
          <li class="site-list__item">
            <a class="site-list__link" href="{{ page.path }}" {% if permalink == page.path %} aria-current="page" {% endif %}>{{ page.name }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>
</header>
